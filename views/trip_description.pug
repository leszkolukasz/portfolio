extends template/template.pug 

block head_styles
  link(rel='stylesheet' href='/styles/global.css')
  link(rel='stylesheet' href='/styles/trip_description.css')

block content
  section.container
    // Main description
    section
      figure
        img.mountain-img(src='/img/mountain.jpg' alt='Mountains')
      section.description
        article
          h1 #{offer.name}
          p #{offer.short_description}
        article
          h2 Jeszcze jeden nag&lstrok;&oacute;wek
          p #{offer.long_description}
    // Detailed info
    section
      article
        h2 Istotne informacje
        ul.dashed
          each info of offer.information
            li= info
          li= `Cena wynosi ${offer.price}`
      article
        - let plan = (week === undefined ? offer.general_plan : offer.detailed_plan[week-1]);
        h2= `Program wycieczki ${week !== undefined ? `w tygodniu ${week}` : ''}`
        ol
          each info of plan
            li= info
    section.button-bar
      a(href='/')
        .button &lt; Powr&oacute;t
      a(href='/booking')
        .button Zarezerwuj &gt;