extends template/template.pug 

block head_styles
  link(rel='stylesheet' href='/styles/global.css')
  link(rel='stylesheet' href='/styles/booking.css')

block content
  section.container
    section
      h2 #{offer.nazwa}
      ul#error_list
        each err of error_msg
          li= err.msg
      br
      br
      form(novalidate='' action=`/booking/${offer.id}` method='POST')
        label(for='first_name') Imie:
        br
        input#first_name(type='text' name='first_name')
        br
        label(for='last_name') Nazwisko:
        br
        input#last_name(type='text' name='last_name')
        br
        label(for='email') Adres email:
        br
        input#email(type='email' name='email')
        br
        label(for='how_many') How many seats:
        br
        input#how_many(type='number' name='how_many')
        br
        button(type='submit' value='Rezerwuj') Rezerwuj
    section#prices
      table
        thead
          tr
            th(scope='col') Ilo&sacute;&cacute; os&oacute;b
            th(scope='col') Cena
        tbody
          tr
            td 1
            td 1000z&lstrok;
          tr
            td 2
            td 2000z&lstrok;
          tr
            td 3-10
            td 10000z&lstrok;
          tr
            td &gt;10
            td 20000z&lstrok;
  script(type='module' src='/scripts/validate.mjs')
