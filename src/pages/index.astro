import type { Skill } from "@/types"
import SkillList from "@/components/SkillList.astro"
import {
  LANGUAGE_SKILLS,
  MACHINE_LEARNING_SKILLS,
  SKILLS,
  WEB_SKILLS,
  OPERATING_SYSTEM_SKILLS,
} from "src/constants"

