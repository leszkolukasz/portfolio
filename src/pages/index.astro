const devbridgeSkills: Skill[] = [
  SKILLS["java"],
  SKILLS["kotlin"],
  SKILLS["spring"],
  SKILLS["react"],
  SKILLS["typescript"],
  SKILLS["jenkins"],
  SKILLS["mongodb"],
  SKILLS["vite"],
