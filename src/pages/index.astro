    }

    <Section title="Experience">
      <Card
        heading="Junior Software Engineer"
        subheading="RadCode"
        date="Jul 2024 - Oct 2024"
        subheadingHref="https://www.linkedin.com/company/11756811"
      >
        <SkillList skills={radcodeSkills} small />
      </Card>
      <Card
